<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/home_video_image"
        android:layout_width="match_parent"
        fresco:roundedCornerRadius="5dp"
        android:layout_height="90dp" />

    <TextView
        android:id="@+id/home_video_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="标题"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_below="@id/home_video_image"
        android:layout_marginTop="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/home_video_title"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/cyberplayer_play_media_disable"
            />
        <TextView
            android:id="@+id/home_video_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10.2万"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/cyberplayer_play_media_disable"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:id="@+id/home_video_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="515"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            />


    </LinearLayout>

</RelativeLayout>